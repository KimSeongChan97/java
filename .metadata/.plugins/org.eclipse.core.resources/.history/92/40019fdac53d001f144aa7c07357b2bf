package array;

public class BubbleSort {

	public static void main(String[] args) {
		int [] ar = {30, 36, 25, 45, 28};
				
		System.out.print("정렬 전 : ");
		for(int i=0; i<ar.length; i++) {
			System.out.print(ar[i] + " ");
		}
		System.out.println();
		
		
		// Bubble sort
		int temp;
		for (int i = 0; i < ar.length + 1; i++) {   // 바깥쪽 루프: 배열의 길이 + 1번 반복
		    for (int j = i + 1; j < ar.length; j++) {  // 안쪽 루프: i 다음 위치부터 배열의 끝까지 반복
		        if (ar[i] < ar[j]) {  // 현재 요소(ar[i])가 다음 요소(ar[j])보다 크다면
		            temp = ar[i];     // 임시 변수(temp)를 사용하여 요소를 교환
		            ar[i] = ar[j];
		            ar[j] = temp;
		        }
		    }
		}

				
		
		
		
		System.out.print("정렬 후 : ");
		for(int i=0; i<ar.length; i++) {
			System.out.print(ar[i] + " ");
		}
		System.out.println();
		
	}

}


