package class_;

import java.util.Scanner;

public class ComputeMain {

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		
		System.out.print("횟수 입력 : ");
		int size = scan.nextInt();
		
		ComputeDTO[] ar = new ComputeDTO[size]; // 횟수입력한  size 만큼의 배열을 생성함.
		ar[size] = new ComputeDTO(); 
		ar[size].setX(size);
		ar[size].setY(size);
		
		for(ComputeDTO dto : ar) {
			dto.calc();
		}
		
		
		for (int i=0; i<ar.length; i++) {
			System.out.println(ar[size].getX() + "\t"
					+ar[size].getY() + "\t"
					+ar[size].getSum() + "\t"
					+ar[size].getSub() + "\t"
					+ar[size].getMul() + "\t"
					+ar[size].getDiv());
		}

			
	}

	
}


/*
[문제] 합, 차, 곱, 몫 구하시오

[실행결과]
횟수 입력 : 3

x 입력 : 320
y 입력 : 258

x 입력 : 256
y 입력 : 125

x 입력 : 452
y 입력 : 365


X Y SUM SUB MUL DIV
320 258
256 125
452 365


*/