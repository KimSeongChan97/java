package operator;

public class BitOperator {

	public static void main(String[] args) {
		int a = +16;
		
		System.out.println("+16 = " + a);
		System.out.println("+16 = " + Integer.toBinaryString(a)); // 2진수, 앞은 모두 0으로 됨
		System.out.println();
				
		System.out.println("~16 = " + ~a); // 1의 보수
		System.out.println("~16 = " + Integer.toBinaryString(~a)); // 위의 2진수 0->1 변환
		System.out.println();
		
		System.out.println("-16 = " + (~a+1)); // 2의 보수
		System.out.println("-16 = " + Integer.toBinaryString(~a+1)); // 위의 1의 보수에서 +1 한 값
		System.out.println();

		
		
	}

}
